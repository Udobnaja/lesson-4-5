extends layouts/default.pug

block content
    h3 Files Structure
    if breadcrumbs
        p
            - var deep = ''
            each crumb in breadcrumbs
                - deep += '/' + crumb
                a(href= '/ls-tree/' + branch  + deep)= crumb + '/'
    else
        p /

    if files
        ul.list.list_group
            each file in files
                li.list__item
                    if (file.type == 'blob')
                        a(href= '/blob/' + branch + path + file.hash)= file.name
                    else
                        a(href= '/ls-tree/' + branch + path + file.name)= file.name
